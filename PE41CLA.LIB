; LIBRERIA EN ENSAMBLADOR

DIR MACRO

        MOV AX,@DATA
        MOV DS,AX
ENDM

FINAL MACRO
        MOV AX,4C00H
        INT 21H
ENDM

MENSAJE MACRO Y,X,MEN
        MOV AH,02H
        MOV BH,00
        MOV DH,Y
        MOV DL,X
        INT 10H

        MOV AH,09H
        LEA DX,MEN

        INT 21H
ENDM
LIMPIAR MACRO X,Y,Z
MOV AX,0600H
MOV BH,X
MOV CX,Y
MOV DX,Z
INT 10H


ENDM

CUADRO MACRO XI,YI,XF,YF,COLOR
MOV AX,0600H
MOV BH,COLOR
MOV BL,00H
MOV CH,YI
MOV CL,XI
MOV DH,YF
MOV DL,XF
INT 10H
ENDM

CURSOR MACRO  R,C

MOV AH,02H
MOV BH,00
MOV DH,R ;POSISICON RENGLON
MOV DL,C ;POSICION COLUMNA
INT 10H
ENDM

TECLADO MACRO CAD
MOV AH,3FH
MOV BX,00
MOV CX,30
MOV DX,OFFSET[CAD]
INT 21H
ENDM


OP MACRO D,SIG
LEA DX,D
MOV AH,09H
INT 21H

MOV AH,01H
INT 21H
CMP AL,'S'
JZ SIG
ENDM


ESPERA MACRO
MOV AH,10H
INT 16H
ENDM

 
